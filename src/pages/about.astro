---
import type { TIdentity } from "../utils/type"
import '../styles/global.css'
import Navigation from "../components/Navigation.astro"
import Footer from "../components/Social.astro"
import Social from "../components/Social.astro"
import Hamburger from "../components/Hamburger.astro"

const pageTitle:string = "About"

const identity:TIdentity = {
	country: "Indonesia",
	firstName: "Benedict",
	lastName: "Ell Nino",
	occupation: "Programmming",
	hobbies: ["Ilustrator", "Software Engineer"]
}

const skills:string[] = ["NextJS", "TailwindCSS", "NestJS", ".NET", "C#"]

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle} - Blog App</title>
		<style define:vars={{skillColor, fontWeight, textCase}}>
			h1 {
			  color: purple;
			  font-size: 4rem;
			}
			.skill {
				color: var(--skillColor);
				font-weight: var(--fontWeight);
    			text-transform: var(--textCase);
			}
		  </style>
	</head>
	<body>
		<Hamburger />
		<Navigation/>
		<h1>About Me</h1>
        <p>Here are a few facts about me:</p>
		<ul>
			<li>My name is {identity.firstName}.</li>
			<li>I live in {identity.country} and I work as a {identity.occupation}.</li>
			{identity.hobbies.length >= 2 &&
				<li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
			}
			</ul>
			<p>My skills are:</p>
		<ul>
		{skills.length >= 5 ? skills.map((skill) => <li class="skill">{skill}</li>) : null}
		</ul>
		<Social platform="twitter" username="vaneshka_00" />
		<Social platform="github" username="ninoslat1" />
		<script>
			import "../scripts/menu.js";
		</script>
	</body>
</html>
